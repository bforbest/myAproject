@model IEnumerable<webpagetest.Models.Video>

@{
    ViewBag.Title = "Choose a tv to watch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Categories</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownList("SelectedCategory", null, "All videos",  htmlAttributes: new {  @onchange = "form.submit();", @class = "form-control" })
            </div>
        </div>
}

<h2>Choose a category or a video</h2>
<div class="row margin-tops">
@foreach (var item in Model)
{
    <div class="col-sm-6 col-md-3">
        <div class="thumbnail">
            <a href="@Url.Action("Details", "Video", new { id=item.VideoID })">
                    <img src=" @Html.DisplayFor(modelItem => item.ImageUrl)" alt=" @Html.DisplayFor(modelItem => item.Name)">
            </a>
            <div class="caption">
                   <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
            </div>
    </div>
    </div>
}
</div>
